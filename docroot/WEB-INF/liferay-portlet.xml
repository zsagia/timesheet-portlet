<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.1.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_1_0.dtd">

<liferay-portlet-app>
	<portlet>
		<portlet-name>timesheet</portlet-name>
		<icon>/icon.png</icon>
		<scheduler-entry>
			<scheduler-description>
				Automatically closes open TaskSessions at the end of the day.
			</scheduler-description>
			<scheduler-event-listener-class>
				com.liferay.timesheet.messaging.ClosingMessageListener
			</scheduler-event-listener-class>
			<trigger>
				<cron>
					<cron-trigger-value>0 59 23 * * ?</cron-trigger-value>
				</cron>
			</trigger>
		</scheduler-entry>
		<ajaxable>false</ajaxable>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<css-class-wrapper>timesheet-portlet</css-class-wrapper>
	</portlet>
	<role-mapper>
		<role-name>administrator</role-name>
		<role-link>Administrator</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>guest</role-name>
		<role-link>Guest</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>power-user</role-name>
		<role-link>Power User</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>user</role-name>
		<role-link>User</role-link>
	</role-mapper>
</liferay-portlet-app>